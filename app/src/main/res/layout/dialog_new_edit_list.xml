<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/dialog_rounded"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:fontFamily="@font/roboto"
        android:text="@string/title_list_title"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_new_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextTheme"
        android:inputType="textCapSentences"
        android:maxLength="40"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorAccent"
        android:textColorHint="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:fontFamily="@font/roboto"
        android:text="@string/title_list_color"
        android:textSize="16sp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radio_list_color"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_default_list_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoRedDark"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoRedLight"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoBlueDark"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoBlueLight"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoBlueBright"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoGreenDark"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoGreenLight"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoPurpleDark"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoPurpleLight"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoOrangeDark"
                    android:textSize="36sp"
                    android:button="@null" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/ic_small_circle"
                    android:textColor="@color/holoOrangeLight"
                    android:textSize="36sp"
                    android:button="@null" />

            </RadioGroup>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>